<div class="likes-table">
	<div class="like-button">
	  <% if (current_user && !comment.liked?(current_user) ) %>
	   <div class="new-button-comments-like"><%= button_to "Like", comment_like_path(comment), method: "post"  %></div>
	  <% elsif ( current_user && comment.liked?(current_user) ) %>
	    <div class="new-button-comments-like"><%= button_to "Unlike", comment_unlike_path(comment,find_like(comment)), method: "delete"  %></div>
	  <% end %>
	</div>
	<div class="number-of-likes">
	  Likes: <%= comment.likes.length %>
	</div>

</div>
