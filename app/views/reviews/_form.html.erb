<!-- Review form -->
<div class="section row">
  <%= form_for [ @company , @review] do |f|%>
    <h4>Write about your experience</h4>
    <div class="input-field">
      <%= f.label :body, "Please share any comments about your experience at the company" %>
      <%= f.text_area :body, :class => "materialize-textarea" %>
    </div>

    <div class="input-field section">
      <%= f.check_box :anonymous,{:checked => 'checked'}, checked_value = true, unchecked_value = false  %>
      <%= f.label :anonymous, "Make your review anonymous?"  %>
    </div>

    <div class="input-field section">
      <%= f.submit "Submit review" , :class => "btn btn-primary" %>
    </div>
<% end %>