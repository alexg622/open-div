
<div class = container>
<%= form_for [ @company , @review ], method: "put"  do |f|%>


  <div class="field">
    <%= f.label :body %>
    <%= f.text_field :body %>
  </div>

  <div class="field">
    <%= f.check_box :anonymous, {} %>
    <%= f.label :anonymous  %>
  </div>

  <div class="actions">
    <%= f.submit "Update Review" %>
  </div>


<% end %>

</div>
