<div class="row">
  <div class="col s12">
    <%= link_to @company.name, @company, :class=>"breadcrumb" %>
    <a href="#!" class="breadcrumb">Review</a>
  </div>
</div>

<h1>Review</h1>
<div class="row">
  <p class="flow-text"><%= @review.body %></p>
</div>

<div class="row divider"></div>

<div class="row section"

  <h6>Comments:</h6>

  <div class="col m12 section">
    <% if @review.comments.any? %>
      <% @review.comments.each do |comment| %>
        <li><%= comment.body %></li>
        <div class="comments-likes-button">
          <%= render partial: "show", locals: {comment: comment} %>
        </div>
      <div>
        <% if (current_user && (comment.commentor_id==current_user.id) )  %>
          <a href=<%= edit_comment_path(@review,comment)%>><i class="small material-icons">edit</i></a>
          <a rel="nofollow" data-method="delete" href="/reviews/<%= @review.id %>/comments/<%= comment.id %>"><i class="small material-icons">delete</i></a>
        <% end %>
        <% end %>
        <% end %>
  	</div>
  </div>
  <% if current_user %>
    <%= button_to "+Add Comment", review_comments_path(@review),method: "get" , :class => "waves-effect waves-light btn modal-trigger "%>
  <% end %>

  <% if @user == current_user %>
  	<%= button_to "+Edit Review", edit_company_review_path(@company, @review), method: "get" %>
  	<%= button_to "Delete Review", [@company, @review], method: "delete" %>
  <% end %>
</div>
