
<div class = container>
<%= form_for [ @company , @review]  do |f|%>


  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_field :body %>
  </div>

  <div class="field">
    <%= f.check_box :anonymous, {} ,true , false  %><br />
    <%= f.label :anonymous  %>
  </div>

  <div class="actions">
    <%= f.submit "Submit review" %>
  </div>


<% end %>	

</div>
