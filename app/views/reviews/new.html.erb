  </div>
  <!-- Stars -->
  <div class="star-ratings col m3">
    <%= rating_for @company, 'culture', disable_after_rate: false %>
  </div>
</div>
<div class="row divider"></div>



<%= form_for [ @company , @review]  do |f|%>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_field :body %>
  </div>

  <div class="field">
    <%= f.check_box :anonymous,{:checked => 'checked'}, checked_value = true, unchecked_value = false  %>
    <%= f.label :anonymous  %>
  </div>

  <div class="actions">
    <%= f.submit "Submit review" %>
  </div>


<% end %>
