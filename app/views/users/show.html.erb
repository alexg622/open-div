
<h3>Profile</h3>
<hr>
<div class="row">
  <div class="col m2">
    <%= image_tag(@user.avatar_url) if @user.avatar? %>
  </div>
</div>

<div class="row">
  <div class="col m9">
    <strong>First Name:</strong> <p><%= @user.first_name %></p>
    <hr>
    <strong>Last Name:</strong> <p><%= @user.last_name %></p>
    <hr>
    <strong>Email:</strong> <p><%= @user.email %></p>
    <hr>
  </div>
  <div class="col m3">
    <a href=<%= edit_user_registration_path %>><i class="small material-icons">edit</i></a>
  </div>
</div>


<div class="reviews">
Reviews:
	<ul>
		<% @reviews.each do |review| %>
			<li><%= link_to "#{review.body}", review_show_path(review) %></li>
		<% end %>
	</ul>
</div>


<% if current_user %>
	<%= button_to "Submit a Company", new_submission_path, method: "get" %>
<% end %>

