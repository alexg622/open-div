<div class="row company-information">
	<!-- Company Profile Image -->
	<div class="col m3">
		<%= image_tag @company.profile_image_url %>
	</div>
	<!-- Company Information -->
	<div class="col m9">
		<h1><%= @company.name %></h1>
		<!-- Company location -->
		<div class="row company-location">
			Located in <span class="location"><%= @company.city_name %>, <%= @company.region_name %>, <%= @company.country_code %></span>
		</div>
		<!-- Company description -->
		<div class="row company-description">
			<%= @company.short_description %>
		</div>

		<!-- Company rating -->
		<div class="row">
			<h3>Overall Rating</h3>
			<% if @company.avg_rating %>
				Culture  : <%= custom_rating_generator @company.culture_rating %>
				Inclusion : <%= custom_rating_generator @company.inclusion_rating %>
				Diversity : <%= custom_rating_generator @company.diversity_rating %>
				Overall: <%= custom_rating_generator @company.avg_rating %>
			<% else %>
				  <p>No ratings have been made yet.</p>
			<% end %>
		</div>
	</div>

</div>

<div class="row divider"></div>

<!-- Add a Review section -->
<div class="row add-review">
	<div class="col m9"><h3>Reviews</h3></div>
	<div class="col m3">
		<% if current_user && !@company.reviewed?(current_user) %>
		<%= button_to "Add a Review", new_company_review_path(@company), method: "get", :class=>"btn btn-primary" %>
		<% end %>
	</div>
</div>

<!-- Comments Section -->
<div class="company-comments">
	<% @company.reviews.each do |review|%>
		<div class="row">

			<!-- Review Details -->
			<div class="col m3">
				<!-- Review Ratings -->
				<div class="review-ratings">
					<p>Overall Rating</p>
					<p><%= custom_rating_for_review( review, "overall" ) %></p>
				</div>
			</div>
			<!-- End of review details -->

			<!-- Review Body -->
			<div class="col m9">
				<div class="row review-body">
					<%= link_to("#{review.body}", review_show_path(review) ) %>
				</div>
				<!-- Author Name  -->
				<div class="row reviewed-by">
					<% if review.anonymous %>
						by <%= "Reviewer" %>
					<% else %>
						by <%= review.reviewer.first_name%>
					<% end %>
				</div>
				<!-- Like Buttons -->
				<div class="row review-like-buttons">
					<div class="col m6">
						<% if (current_user && !review.liked?(current_user) ) %>
							<%= button_to "Like", review_like_path(review), method: "get"  %>
						<% elsif ( current_user && review.liked?(current_user) ) %>
							<%= button_to "Unlike", review_unlike_path(review), method: "delete"  %>
						<% end %>
					</div>
					<div class="col m6">
						Likes: <%= review.likes.length %>
					</div>

				</div>
			</div>
			<!-- End of review body  -->
		</div>
		<!-- end of overall review row -->
		<div class="row divider"></div>
	<% end %>
</div>

<div>
	<% if current_user && current_user.admin == true %>
		<%= link_to "Update Company", edit_company_path(@company) %>
		<%= link_to "Delete Company", @company, method: "delete" %>
	<% end %>
</div>
