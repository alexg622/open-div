body {
  display: flex;
  min-height: 100vh;
  flex-direction: column;
  font-size: 16px;
  font-weight: 400;
}

main {
  flex: 1 0 auto;
}
.review-heading{
  line-height: 100px;
  font-family: "Roboto", sans-serif;
  // margin-left: 20px;
  font-weight: 200;
  text-align: center
}
.rating-questions{
  text-align: center;
  .review-icon{
    padding: 15px;
    i{
      font-size: 55px;
      color: lighten($theme-gray, 50%);
    }
  }
  .flow-text {
      max-width: 65%;
      font-size: 1.4rem;
      margin: 0 auto;
  }
  .star-ratings{
    margin: 40px 0 20px 2px;
  }
}

.btn{
  box-shadow: none !important;
  font-family: "Montserrat", sans-serif;
  text-transform: uppercase;
  // font-weight: 700 !important;
  letter-spacing: 0.05em !important;
}
.navigation{
  height: 100px;
  .logo{
    padding: 20px;
    padding: 32px 20px 15px 20px;
    max-height: 90px;
  }
  ul a {
     padding-top: 20px;
     max-height: 90px;
     font-family: "Montserrat", sans-serif;
     letter-spacing: .05em;
     text-transform: uppercase;
  }
}
//------------------- Home Search
.home-search-form{
  text-align: center;
  position: relative;
  margin-top: 12%;
  z-index: 100;

  //--- Logo container
  .logo-container{
    width: 100%;
    height: auto;
    padding: 25px;
    .flow-text{
      color: $white;
    }
  }
  #autocomplete{
    background: $input-search-background;
  }
}
#login-sign-up-links{
  margin-right: 2%;
}

//------------------- Typography
body{
  font-family: $bodyFontFamily;
}
h1,h2,h3,h4,h5,h6{
  font-family: $headingFontFamily;
  font-weight: 200;
}

// ----------------------- HOME PAGE
.home{
  .footer-copyright {
    background: transparent;
  }
  background: $home-background;
  .inline{
    li {
      display: inline-block;
      padding: 10px 15px;
      a{
        font-family: $themeFont1;
        color: $white;
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: .05em;
      }
    }
  }
  h2{
    text-align: center;
    font-size: $h1-fontsize * .25;
    text-transform: uppercase;
    letter-spacing: .2em;
    font-weight: 700;
    font-family: $homeH2FontFamily;
  }
  h3{
    color: $home-h3-color;
    margin-top: 40px;
    margin-bottom: 40px;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: .1em;
    font-family: $homeH3FontFamily;
  }

  #featured-companies {
    background: $featured-companies-background;
    margin-top: -20%;
    padding-top: 50px;
    padding-bottom: 50px;
    position: relative;
    z-index: 100;
    background: $featured-companies-background;
    box-shadow: 4px 0px 27px rgba(0, 0, 0, 0.38);

    .top-company {
      text-align: center;

      .company-img{
        width: 100px;
        height: auto;
        max-width: 100px;
        margin-bottom: 30px;
      }
      h5{
        margin-bottom: 25px;
      }
    }
  }

  #about {
    position: relative;
    background: $about-background;
    margin-top: 2%;
    padding: 5% 0;
    .about-text{
      text-align: center;
      padding: 1% 4%;
      width: 60%;
      margin: 0 auto;
      color: $home-h3-color;
      font-size: $about-text-font-size;
      line-height: $about-text-font-size*1.7;
      letter-spacing: .05em;
      font-weight: 300;
    }
  }
}

// breadcrumbs

.breadcrumb {
    color: $theme-gray !important;
}
.breadcrumb:before {
  color: rgb(199, 198, 197) !important;
}

//--------------------  FOOTER
footer{
  #footer-team{
    color: #a9a9a9;
  }
  img{
    width: auto;
    height: auto;
    max-height: 40px;
    opacity: .7;
  }
  .flow-text{
    color: $white;
  }
  .page-footer {
      padding: 3% 0;
      text-align: right;
      ul{
        text-align: left;
        li{
          a{
            text-transform: uppercase;
            letter-spacing: .05em;
            font-weight: 300;
            color: #a9a9a9;
          }
          margin-bottom: 10px;
        }
      }
  }
}
.footer-copyright{
  color: lighten($black, 15%);
  text-transform: uppercase;
  letter-spacing: .1em;
  background: #383838;
}
.search{
  #left-image-search{
    background: url(<%= asset_data_uri 'meeting.jpg' %>) no-repeat;
    background-size: cover;
    padding: 0;
    position: relative;
    .filter{
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,.6);
    }
    .tagline{
      margin: 0;
      padding: 30px;
      position: absolute;
      top: 40%;
      font-family: "Old Standard TT", serif;
      font-size: 50px;
      color: #fff;
      font-style: italic;
      width: 58%;
      left: 12%;
      @media screen and (max-width: 1400px) {
        font-size: 40px;
        top: 25%;
      }
    }
  }
  #results {
      overflow-y: scroll;
      // height: 600px;
  .company-img-holder{
    text-align: center;
    .img_resize {
      max-width: 150px;
      height: auto;
      }
    }
  }
}

.company-profile{
  .company-header{
    background: $theme-light-gray;
    min-height: 150px;
    h1 {
      line-height: 100px;
      font-family: "Roboto", sans-serif;
      // margin-left: 20px;
      font-weight: 200;
    }
  }
  .company-profile-img {
    margin-top: -120px;
    @media screen and (max-width: 500px) {
      margin-top: 0;
    }
  }
}
